<div class="col-lg-12 col-md-7">
  <div class="card">
      <div class="header">
          <h4 class="title">Pre Reservacion</h4>
      </div>
      <div class="content">
        <%= form_with(model: reservacion, local: true) do |form| %>
          <% if reservacion.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(reservacion.errors.count, "error") %> prohibited this reservacion from being saved:</h2>

              <ul>
              <% reservacion.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          
          <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= form.label :Nombre %>
                  <%= form.text_field :Nombre, id: :reservacion_Nombre, class: 'form-control border-input' %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= form.label :Correo %>
                  <%= form.text_field :Correo, id: :reservacion_Correo, class: 'form-control border-input' %>
                </div>
              </div>
          </div>
          
          <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= form.label :Telefono %>
                  <%= form.text_field :Telefono, id: :reservacion_Telefono, class: 'form-control border-input' %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= form.label :Numero_Personas %>
                  <%= form.number_field :Numero_Personas, id: :reservacion_Numero_Personas, class: 'form-control border-input' %>
                </div>
              </div>
          </div>
          
          <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= form.label :Fecha_llegada %>
                  <%= form.date_select :Fecha_llegada, id: :reservacion_Fecha_llegada, class: 'btn dropdown-toggle' %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= form.label :Fecha_retiro %>
                  <%= form.date_select :Fecha_retiro, id: :reservacion_Fecha_retiro, class: 'btn dropdown-toggle' %>
                </div>
              </div>
          </div>
          
          <div class="row">
              <div class="col-md-10">
                <div class="form-group">
                  <%= form.label :Hotel %>
                  <%= form.text_field :Hotel, id: :reservacion_Hotel, class: 'form-control border-input' %>
                </div>
              </div>
          </div>
          
          <div class="text-center">
            <%= form.submit %>
          </div>

        <% end %>

                <div class="clearfix"></div>
        </div>
    </div>
</div>